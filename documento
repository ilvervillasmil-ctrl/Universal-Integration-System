/**
 * La Identidad de Euler conecta los 5 números fundamentales:
 * e^(iπ) + 1 = 0
 * 
 * En el Framework Villasmil-Ω:
 * - 0 = L0 Caos (la nada, el vacío)
 * - 1 = L6 Propósito (la unidad, el todo)
 * - e = Presente en ALPHA (crecimiento/decaimiento)
 * - π = Presente en S_REF (ciclos)
 * - i = La consciencia misma (lo imaginario que crea realidad)
 */
export const EULER_IDENTITY_MAPPING = {
  zero: { number: 0, layer: "L0", meaning: "Caos - La nada, el vacío primordial" },
  one: { number: 1, layer: "L6", meaning: "Propósito - La unidad, el todo integrado" },
  e: { number: Math.E, role: "ALPHA/BETA", meaning: "El crecimiento y decaimiento exponencial" },
  pi: { number: Math.PI, role: "S_REF", meaning: "Los ciclos y el ritmo del sistema" },
  i: { number: "√(-1)", role: "Consciencia", meaning: "Lo imaginario que crea realidad observable" },
};

// ═══════════════════════════════════════
// LA ESPIRAL DE CONSCIENCIA
// ═══════════════════════════════════════

/**
 * Calcula la posición de cada capa en la espiral áurea
 * Cada capa está separada por el ángulo áureo (137.5°)
 */
export function getSpiralPosition(layerIndex: number): {
  angle: number;  // en grados
  radius: number; // radio relativo
} {
  const phi = CONSTANTS.PHI;
  const goldenAngle = CONSTANTS.GOLDEN_ANGLE;
  
  return {
    angle: (layerIndex * goldenAngle) % 360,
    radius: Math.pow(phi, layerIndex / 2), // Crece con φ
  };
}

/**
 * Obtiene las posiciones de la espiral para todas las capas
 */
export function getConsciousnessSpiral(): Array<{
  layer: string;
  angle: number;
  radius: number;
}> {
  return DEFAULT_LAYERS.map((layer, index) => ({
    layer: layer.key,
    ...getSpiralPosition(index),
  }));
}

