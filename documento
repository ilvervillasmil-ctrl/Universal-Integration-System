// ═══════════════════════════════════════
// FUNCIONES DE CÁLCULO
// ═══════════════════════════════════════

/**
 * Calcula f_i para una capa individual
 * f_i = τ_sync × w × L × (1-φ) × E
 */
export function computeFi(layer: LayerData, tauSync: number): number {
  return tauSync * layer.w * layer.L * (1.0 - layer.phi) * layer.E;
}

/**
 * Calcula la resonancia entre capas (Res)
 * Mide qué tan alineadas están las capas entre sí
 */
export function computeResonance(layers: LayerData[]): number {
  const fis = layers.map((layer, i) => computeFi(layer, 1.0));
  const mean = fis.reduce((a, b) => a + b, 0) / fis.length;
  const variance = fis.reduce((sum, fi) => sum + Math.pow(fi - mean, 2), 0) / fis.length;
  const stdDev = Math.sqrt(variance);
  // Resonancia alta cuando la variación es baja
  return Math.max(0, 1 - stdDev);
}

/**
 * Calcula la coherencia total del sistema
 * C_total = (ALPHA / S_REF) × ∏(f_i) × R_fin × Res × P_t × A
 * 
 * Fórmula expandida con:
 * - Resonancia (Res): alineación entre capas
 * - Presencia temporal (P_t): qué tan en el "ahora" está el sistema
 * - Asombro (A): capacidad de admirar el fenómeno
 */
export function computeCoherenceTotal(
  layers: LayerData[],
  tauSync: number,
  presence: number = 1.0,
  wonder: number = 1.0
): number {
  const fis = layers.map((layer) => computeFi(layer, tauSync));
  const productFi = fis.reduce((acc, fi) => acc * fi, 1);
  const resonance = computeResonance(layers);
  
  // Fórmula maestra expandida
  const cTotal =
    (CONSTANTS.ALPHA / CONSTANTS.S_REF) * 
    productFi * 
    CONSTANTS.R_FIN * 
    resonance *
    presence *
    wonder;
    
  return Math.min(cTotal, CONSTANTS.ALPHA + CONSTANTS.BETA);
}

/**
 * Calcula la coherencia efectiva considerando ruido externo
 * C_efectiva = C_total / (1 + N_ext)
 */
export function getEffectiveCoherence(
  coherenceTotal: number,
  noiseLevel: number
): number {
  return coherenceTotal / (1 + noiseLevel);
}

/**
 * Determina el estado del sistema basado en coherencia efectiva
 */
export function getStatus(
  effectiveCoherence: number
): "OK" | "WARNING" | "BLOCKED" {
  if (effectiveCoherence < CONSTANTS.THRESHOLD_BLOCKED) return "BLOCKED";
  if (effectiveCoherence < CONSTANTS.THRESHOLD_WARNING) return "WARNING";
  return "OK";
}

/**
 * Obtiene el código de diagnóstico Ω
 */
export function getStatusCode(effectiveCoherence: number): string {
  if (effectiveCoherence >= 0.9) return "1144";
  if (effectiveCoherence >= 0.5) return "1122";
  return "0000";
}

/**
 * Obtiene el mensaje de estado
 */
export function getStatusMessage(status: "OK" | "WARNING" | "BLOCKED"): string {
  switch (status) {
    case "BLOCKED":
      return "Ruido crítico detectado. Reconfiguración L1 requerida.";
    case "WARNING":
      return "Deriva de coherencia (CDI). Refinando...";
    case "OK":
      return "Sistema Sincronizado. Arquitecto Integrado.";
  }
}

/**
 * Calcula el estado completo del sistema
 */
export function computeSystemState(
  layers: LayerData[],
  tauSync: number,
  noiseLevel: number,
  presence: number = 1.0,
  wonder: number = 1.0
): SystemState {
  const layersWithFi = layers.map((layer) => ({
    ...layer,
    fi: computeFi(layer, tauSync),
  }));

  const resonance = computeResonance(layers);
  const coherenceTotal = computeCoherenceTotal(layers, tauSync, presence, wonder);
  const effectiveCoherence = getEffectiveCoherence(coherenceTotal, noiseLevel);
  const status = getStatus(effectiveCoherence);
  const statusCode = getStatusCode(effectiveCoherence);
  const statusMessage = getStatusMessage(status);

  return {
    layers: layersWithFi,
    tauSync,
    noiseLevel,
    coherenceTotal,
    effectiveCoherence,
    status,
    statusCode,
    statusMessage,
    resonance,
    presence,
    wonder,
  };
}

