// ═══════════════════════════════════════
// FUNCIONES DE CÁLCULO
// ═══════════════════════════════════════

/**
 * Calcula f_i para una capa individual
 * f_i = τ_sync × w × L × (1-φ) × E
 */
export function computeFi(layer: LayerData, tauSync: number): number {
  return tauSync * layer.w * layer.L * (1.0 - layer.phi) * layer.E;
}

/**
 * Calcula la resonancia entre capas (ρ - rho)
 * Mide qué tan alineadas están las capas entre sí
 * Rango: 0-1
 */
export function computeResonance(layers: LayerData[]): number {
  const fis = layers.map((layer, i) => computeFi(layer, 1.0));
  const mean = fis.reduce((a, b) => a + b, 0) / fis.length;
  const variance = fis.reduce((sum, fi) => sum + Math.pow(fi - mean, 2), 0) / fis.length;
  const stdDev = Math.sqrt(variance);
  // Resonancia alta cuando la variación es baja
  return Math.max(0, 1 - stdDev);
}

/**
 * Calcula la Presencia Temporal (P_t)
 * P_t = e^(-|δt|/τ)
 * 
 * Donde:
 * - δt = desplazamiento mental del ahora (en "unidades de atención")
 * - τ = ancho de la ventana de atención (default = 1)
 * 
 * P_t = 1: Presencia total (meditación profunda)
 * P_t < 1: Atención dispersa en pasado/futuro
 * 
 * @param mentalDisplacement Qué tan lejos está la mente del "ahora" (0 = presente)
 * @param attentionWindow Amplitud de la ventana de atención (meditadores tienen τ mayor)
 */
export function computePresence(
  mentalDisplacement: number = 0,
  attentionWindow: number = 1
): number {
  return Math.exp(-Math.abs(mentalDisplacement) / attentionWindow);
}

/**
 * Calcula el Asombro (A - Wonder)
 * A = 1 - e^(-N/k)
 * 
 * Donde:
 * - N = número de "primeras veces" o novedades recientes
 * - k = constante de saturación (default = 5)
 * 
 * A = 0: Sin asombro (cinismo total)
 * A = 1: Asombro máximo (mente de principiante)
 * 
 * @param novelties Número de experiencias nuevas recientes
 * @param saturationConstant Velocidad de saturación
 */
export function computeWonder(
  novelties: number = 5,
  saturationConstant: number = 5
): number {
  return 1 - Math.exp(-novelties / saturationConstant);
}

/**
 * Calcula la Interacción Externa (I_ext)
 * I = √(1 + Σ(Cⱼ × cos(θⱼ)))
 * 
 * Modela la interferencia de ondas entre sistemas de consciencia.
 * 
 * Donde:
 * - Cⱼ = coherencia del sistema externo j
 * - θⱼ = diferencia de fase con el sistema j (0 = sincronizados, π = opuestos)
 * 
 * I > 1: Resonancia constructiva (amor, sincronía)
 * I = 1: Sin interacción externa
 * I < 1: Interferencia destructiva (conflicto)
 * 
 * @param externalSystems Array de {coherence, phase} de sistemas externos
 */
export function computeExternalInteraction(
  externalSystems: Array<{ coherence: number; phase: number }> = []
): number {
  if (externalSystems.length === 0) return 1.0;
  
  const sum = externalSystems.reduce((acc, system) => {
    return acc + system.coherence * Math.cos(system.phase);
  }, 0);
  
  return Math.sqrt(Math.max(0.01, 1 + sum)); // Min 0.1 to avoid collapse
}

/**
 * Calcula la "Capacidad de Vivir" = P_t × A
 * Combina presencia y asombro para medir qué tan vivo está el sistema
 */
export function computeAliveness(presence: number, wonder: number): number {
  return presence * wonder;
}

/**
 * Calcula la coherencia total del sistema
 * C_total = (ALPHA / S_REF) × ∏(f_i) × R_fin × Res × P_t × A
 * 
 * Fórmula expandida con:
 * - Resonancia (Res): alineación entre capas
 * - Presencia temporal (P_t): qué tan en el "ahora" está el sistema
 * - Asombro (A): capacidad de admirar el fenómeno
 */
export function computeCoherenceTotal(
  layers: LayerData[],
  tauSync: number,
  presence: number = 1.0,
  wonder: number = 1.0
): number {
  const fis = layers.map((layer) => computeFi(layer, tauSync));
  const productFi = fis.reduce((acc, fi) => acc * fi, 1);
  const resonance = computeResonance(layers);
  
  // Fórmula maestra expandida
  const cTotal =
    (CONSTANTS.ALPHA / CONSTANTS.S_REF) * 
    productFi * 
    CONSTANTS.R_FIN * 
    resonance *
    presence *
    wonder;
    
  return Math.min(cTotal, CONSTANTS.ALPHA + CONSTANTS.BETA);
}

/**
 * Calcula la coherencia efectiva considerando ruido externo
 * C_efectiva = C_total / (1 + N_ext)
 */
export function getEffectiveCoherence(
  coherenceTotal: number,
  noiseLevel: number
): number {
  return coherenceTotal / (1 + noiseLevel);
}

/**
 * Determina el estado del sistema basado en coherencia efectiva
 */
export function getStatus(
  effectiveCoherence: number
): "OK" | "WARNING" | "BLOCKED" {
  if (effectiveCoherence < CONSTANTS.THRESHOLD_BLOCKED) return "BLOCKED";
  if (effectiveCoherence < CONSTANTS.THRESHOLD_WARNING) return "WARNING";
  return "OK";
}

/**
 * Obtiene el código de diagnóstico Ω
 */
export function getStatusCode(effectiveCoherence: number): string {
  if (effectiveCoherence >= 0.9) return "1144";
  if (effectiveCoherence >= 0.5) return "1122";
  return "0000";
}

/**
 * Obtiene el mensaje de estado
 */
export function getStatusMessage(status: "OK" | "WARNING" | "BLOCKED"): string {
  switch (status) {
    case "BLOCKED":
      return "Ruido crítico detectado. Reconfiguración L1 requerida.";
    case "WARNING":
      return "Deriva de coherencia (CDI). Refinando...";
    case "OK":
      return "Sistema Sincronizado. Arquitecto Integrado.";
  }
}

/**
 * Calcula el estado completo del sistema
 */
export function computeSystemState(
  layers: LayerData[],
  tauSync: number,
  noiseLevel: number,
  presence: number = 1.0,
  wonder: number = 1.0
): SystemState {
  const layersWithFi = layers.map((layer) => ({
    ...layer,
    fi: computeFi(layer, tauSync),
  }));

  const resonance = computeResonance(layers);
  const coherenceTotal = computeCoherenceTotal(layers, tauSync, presence, wonder);
  const effectiveCoherence = getEffectiveCoherence(coherenceTotal, noiseLevel);
  const status = getStatus(effectiveCoherence);
  const statusCode = getStatusCode(effectiveCoherence);
  const statusMessage = getStatusMessage(status);

  return {
    layers: layersWithFi,
    tauSync,
    noiseLevel,
    coherenceTotal,
    effectiveCoherence,
    status,
    statusCode,
    statusMessage,
    resonance,
    presence,
    wonder,
  };
}

